            <Grid Grid.ColumnSpan="2">
                <Label Grid.Column="0" Content="Template:" VerticalAlignment="Center" Margin="10" />
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30" Margin="184,0,0,0" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
